@using PlanetDotnet.Views.Bases.Styles
@using PlanetDotnet.Views.Components.TagComponents
@if (ProfileView != null)
{
    <div class="col-md-4 profileCard" id="@ProfileView.Id">
        <img class="mugShot" src="@ProfileView.Avatar" alt="@ProfileView.FullName" />
        <div class="mugShotBorder">
        </div>
        <div class="profileCardWrapper">

            <p class="name">@ProfileView.FullName</p>
            <p class="twitter">
                <a href="https://twitter.com/@ProfileView.TwitterHandle">@ProfileView.TwitterHandle</a>
            </p>

            <p class="description">
                @ProfileView.Description
            </p>

            <p>
                <TagComponent Tags=@ProfileView.Tags />
            </p>

            <p class="location">
                <i class="fa fa-map-marker"></i> @ProfileView.StateOrRegion
            </p>
            <p class="website">
                <a href="@ProfileView.WebSite" title="@ProfileView.WebSite">@ProfileView.WebSite</a>
            </p>
        </div>
    </div>
}
